
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">

    <ImageButton
        android:src="@drawable/dashboard_arrivals"
        android:layout_marginTop="150dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="25dp"
        android:scaleType="fitCenter"
        android:tag="BTN_DASHBOARD_FLIGHTUS"
        android:background="@null"
        android:id="@+id/btnDashboardFlightUS" />
    
    <ImageButton
        android:src="@drawable/dashboard_departure"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:tag="BTN_DASHBOARD_FLIGHTPL"
        android:scaleType="fitCenter"
        android:background="@null"
        android:id="@+id/btnDashboardFlightPL" />

    <ImageButton
        android:src="@drawable/dashboard_summary"
        android:layout_marginTop="150dp"
        android:layout_marginRight="25dp"
        android:layout_alignParentRight="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:tag="BTN_DASHBOARD_BUDGET_SUM"
        android:background="@null"
        android:id="@+id/btnDashboardBudgetSum" />
    
    <ImageButton
        android:src="@drawable/dashboard_cash"
        android:layout_marginTop="350dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="25dp"
        android:scaleType="fitCenter"
        android:tag="BTN_DASHBOARD_BUDGET_IN"
        android:background="@null"
        android:id="@+id/btnDashboardBudgetIncome" />
    
    <ImageButton
        android:src="@drawable/dashboard_shopping"
        android:layout_marginTop="350dp"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:tag="BTN_DASHBOARD_BUDGET_OUT"
        android:background="@null"
        android:id="@+id/btnDashboardBudgetOutcome" />

    <ImageButton
        android:src="@drawable/dashboard_home"
        android:layout_marginTop="350dp"
        android:layout_marginRight="25dp"
        android:layout_alignParentRight="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:tag="BTN_DASHBOARD_HOTEL"
        android:background="@null"
        android:id="@+id/btnDashboardHotel" />
    
    <ImageButton
        android:src="@drawable/dashboard_subway"
        android:layout_marginTop="550dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="25dp"
        android:scaleType="fitCenter"
        android:tag="BTN_DASHBOARD_SUBWAY"
        android:background="@null"
        android:id="@+id/btnDashboardSubway" />

    <ImageButton
        android:src="@drawable/dashboard_refresh"
        android:layout_marginTop="550dp"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:tag="BTN_DASHBOARD_CONVERTER"
        android:background="@null"
        android:id="@+id/btnDashboardConverter" />

</RelativeLayout>