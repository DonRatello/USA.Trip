<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/layout_frame">
        
        <ImageView
            android:id="@+id/hotelImageLogoDoubleTree"
            android:src="@drawable/logo_doubletree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:minWidth="25px"
            android:minHeight="25px" />
        
        <TextView
            android:id="@+id/hotelLabelHotelName1"
            android:text="DoubleTree by Hilton Hotel"
            android:layout_below="@+id/hotelImageLogoDoubleTree"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="-20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/hotelLabelHotelName2"
            android:text="New York City - Chelsea"
            android:layout_below="@+id/hotelLabelHotelName1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff" />
        
        <ImageView
            android:id="@+id/hotelImageIconPointer"
            android:layout_below="@+id/hotelLabelHotelName2"
            android:src="@drawable/icon_pointer_100"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        
        <TextView
            android:layout_below="@+id/hotelLabelHotelName2"
            android:text="128 West 29th Street"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="80dp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@+id/hotelLabelHotelName2"
            android:text="New York NY 10001 US"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="80dp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <ImageView
            android:id="@+id/hotelImageIconPhone"
            android:layout_below="@+id/hotelImageIconPointer"
            android:src="@drawable/icon_phone_100"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp" />
        
        <TextView
            android:text="12125640994"
            android:layout_below="@+id/hotelImageIconPointer"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <TextView
            android:id="@+id/hotelLabelCheckInNmbr"
            android:layout_below="@+id/hotelImageIconPhone"
            android:text="8"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:textSize="50dp" />
        
        <TextView
            android:text="SAT"
            android:layout_below="@+id/hotelImageIconPhone"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            android:textColor="#ffffff"
            android:layout_toRightOf="@+id/hotelLabelCheckInNmbr"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="FEB"
            android:layout_below="@+id/hotelImageIconPhone"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="20dp"
            android:textColor="#ffffff"
            android:layout_toRightOf="@+id/hotelLabelCheckInNmbr"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <TextView
            android:text="Check In:"
            android:layout_below="@+id/hotelLabelCheckInNmbr"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="15dp"
            android:textColor="#ffffff" />

        <TextView
            android:text="4:00 PM"
            android:layout_below="@+id/hotelLabelCheckInNmbr"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="70dp"
            android:textColor="#ffffff" />

        <View
            android:layout_below="@+id/hotelImageIconPhone"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="120dp"
            android:background="#00FFFF"/>

        <View
            android:layout_below="@+id/hotelImageIconPhone"
            android:layout_width="1dp"
            android:layout_alignParentRight="true"
            android:layout_height="50dp"
            android:layout_marginTop="65dp"
            android:layout_marginRight="120dp"
            android:background="#00FFFF"/>

        <TextView
            android:id="@+id/hotelLabelCheckOutNmbr"
            android:layout_below="@+id/hotelImageIconPhone"
            android:text="16"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#ffffff"
            android:layout_marginTop="50dp"
            android:layout_marginRight="55dp"
            android:textSize="50dp" />

        <TextView
            android:text="SUN"
            android:layout_below="@+id/hotelImageIconPhone"
            android:layout_marginTop="60dp"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff"
            android:layout_alignParentRight="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="FEB"
            android:layout_below="@+id/hotelImageIconPhone"
            android:layout_marginTop="80dp"
            android:layout_marginRight="12dp"
            android:textColor="#ffffff"
            android:layout_alignParentRight="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Check Out:"
            android:layout_below="@+id/hotelLabelCheckOutNmbr"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginRight="60dp"
            android:textColor="#ffffff" />

        <TextView
            android:text="12:00 PM"
            android:layout_below="@+id/hotelLabelCheckOutNmbr"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:paddingBottom="10dp"
            android:textColor="#ffffff" />
        
        <ImageView
            android:layout_below="@+id/hotelImageIconPhone"
            android:id="@+id/hotelImageIconSleep"
            android:src="@drawable/icon_sleep_100"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        
        <TextView
            android:text="8 Nights"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/hotelImageIconSleep"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        </RelativeLayout>

</RelativeLayout>
