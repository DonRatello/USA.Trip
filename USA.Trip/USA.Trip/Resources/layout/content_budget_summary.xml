
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/layout_frame">
        
        <ImageView
            android:src="@drawable/icon_budget_summary_income_96"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:text="$ 2159,00"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:id="@+id/budgetSummaryIncomeLabel" />

        <ImageView
            android:src="@drawable/icon_budget_summary_outcome_96"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="50dp"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:text="$ 159,00"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="110dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:id="@+id/budgetSummaryExpensesLabel" />

        <ImageView
            android:src="@drawable/icon_budget_summary_cash_96"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="50dp"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <ImageView
            android:src="@drawable/icon_budget_summary_chevron_96"
            android:layout_marginTop="290dp"
            android:layout_marginLeft="90dp"
            android:rotation="140"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:text="$ 159,00"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="265dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:id="@+id/budgetSummaryRestCashLabel" />

        <ImageView
            android:src="@drawable/icon_budget_summary_card_96"
            android:layout_marginTop="340dp"
            android:layout_marginLeft="50dp"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <ImageView
            android:src="@drawable/icon_budget_summary_chevron_96"
            android:layout_marginTop="380dp"
            android:layout_marginLeft="90dp"
            android:rotation="140"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:text="$ 159,00"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="353dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:id="@+id/budgetSummaryRestCardLabel" />

    </RelativeLayout>
</RelativeLayout>